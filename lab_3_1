#include <stdio.h>
/*Задача № 21 на СИ: Дата некоторого дня характеризуется двумя натуральными числами m (порядковый номер месяца) и n (число). По заданным m и n определить дату предыдущего дня (принять, что m и n не характеризуют 1 января)*/
int DAYS[] = {0, 31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31}; //индексация с нуля, поэтому для удобства первое число не используем

int main() {
    int m, n;
    printf("Программа выводит дату предыдущего дня по заданному номеру месяца и дню\n");
    
    do {
        printf("Введите номер месяца (число от 1 до 12)\n");
        scanf("%d", &m);
        printf("Введите номер дня число от (1 до 31)\n");
        scanf("%d", &n);
        if (m < 1 || m > 12 || n < 1 || n > DAYS[m]){
            printf("Некорректный номер месяца или числа.\n"); 
        }
    }
    while (m < 1 || m > 12 || n < 1 || n > DAYS[m]);
        switch (m) {
            case 2: //обработка февраля
                if (n == 1) {
                    m = 12;
                    n = 31;
                }     
                else if (n == 1) {
                    m = 1;
                    n = DAYS[12];
                } 
                else {
                    n--;
                }
                break;

            case 1: //обработка января
                if (n == 1) {
                    m = 12;
                    n = 31;
                } 
                else {
                    n--;
                }
                break;
            default: //обработка оставшихся месяцев
                if (n == 1) {
                    m--;
                    n = DAYS[m];
                } 
                else {
                    n--;
                }
    }

    printf("Дата предыдущего дня: %d %d\n", m, n);  
}
