#include <stdio.h>
/*Задача № 21 на СИ: Дано уравнение прямой вида Ax+By+C. Проверить, проходит ли она через начало координат*/

int main() {
/*Прямая проходит через начало координат, если свободный член, те С, равен 0*/
    int A, B, C;
    printf("Программа определит, проходит ли прямая через начало координат\n");
    printf("ВВедите коэффициенты A, B, C уравнения прямой Ax + By + C = 0 через пробел:\n");
    scanf("%d%d%d", &A, &B, &C);
    if (C == 0) {
        printf("Прямая проходит через начало координат.\n");
    }
    else {
         printf("Прямая не проходит через начало координат.\n");
    }
}
