#include <stdio.h>
#define LIM 30
/*Задача №50 на си: Дан целочисленный массив размера N. Найти количество противоположных элементов в данном массиве*/
int main() {
    int a[LIM];
    int i, j, n, k = 0;
    printf("Программа выводит количество противоположных элементов в массиве.\n");
    do {
        printf("Введите 0 < n < %d: ", LIM);
        scanf("%d", &n);
    } while (n <= 0 || n > LIM);

    printf("Введите элементы массива\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    for (i = 0; i < n; i++) {
        for (j = i + 1; j < n; j++) {
            if (a[i] == -a[j]) {
                k++;
            }
        }
    }
    printf("Количество пар противоположных элементов: %d\n", k);
}
