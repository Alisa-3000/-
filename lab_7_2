#include <iostream>
#include <vector>
using namespace std;
/*На С++ 34: Дан массив размера N. Найти номер его последнего локального максимума (локальный максимум- это элемент, который больше любого из своих соседей). */
int main() {
    int N, lm = -1;
    vector<int> a;

    cout << "Программа выводит номер последнего локального максимума." << endl;
    do {
        cout << "Введите размер массива (N > 0): \n";
        cin >> N;
    } while (N <= 0);

    a.resize(N);

    cout << "Введите элементы массива:" << endl;
    for (int i = 0; i < N; i++) {
        cin >> a[i];
    }

    if(N > 0){
        for (int i = 0; i < N; i++) {
            //проверка первого числа
            if (i == 0 && N > 1 && a[i] > a[i + 1]) {
                lm = i;
            }
            //проверка последнего числа
            else if (i == N-1 && N > 1 && a[i] > a[i - 1]) {
                lm = i;
            }
            //проверка оставшихся
            else if (i > 0 && i < N-1  && a[i] > a[i - 1] && a[i] > a[i + 1]) {
                lm = i;
            }
       }
    }
    cout << "Номер последнего локального максимума: " << lm << endl;
}
